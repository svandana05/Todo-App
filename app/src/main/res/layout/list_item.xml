<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:padding="5dp"
        android:textStyle="bold"
        android:text="Date"
        android:gravity="center"
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="5dp"
            android:drawablePadding="5dp"
            android:text="Mark as done"
            android:id="@+id/tv_done"
            android:layout_gravity="right"
            android:drawableTint="@color/cardview_dark_background"
            android:drawableRight="@drawable/ic_thumb_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_star"
            android:padding="5dp"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <TextView
                android:layout_marginTop="15dp"
                android:padding="2dp"
                android:id="@+id/tv_todo_title"
                android:textColor="@color/cardview_dark_background"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                tools:text="Todo Note Todo Note  Todo Note  Todo Note  Todo Note  Todo Note  Todo Note  Todo Note  Todo Note  Todo Note  Todo Note  Todo Note "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_created_time"
                android:gravity="right"
                tools:text="Time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>