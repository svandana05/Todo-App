<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:layout_height="match_parent"
    tools:context=".CreateTodoActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:text="Task description"
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_alarm_on"
            android:padding="5dp"
            android:tint="@color/colorAccent"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_alarm_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_alarm_add"
            android:padding="5dp"
            android:tint="@color/colorAccent"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_add_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_star_normal"
            android:padding="5dp"
            android:tint="@color/colorAccent"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_star_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_star_high"
            android:padding="5dp"
            android:tint="@color/colorAccent"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <com.example.todoapp.LinedEditText
        android:id="@+id/todo_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:hint="Start typing from here..."
        android:gravity="top"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:ems="10"
        />

</LinearLayout>