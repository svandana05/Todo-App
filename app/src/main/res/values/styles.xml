<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogSlideAnimLeftRight" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/DialogAnimationLeftRight</item>
        <item name="buttonBarButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/raleway_semi_bold</item>
    </style>


    <style name="DialogAnimationLeftRight">
        <item name="android:windowEnterAnimation">@anim/slide_from_left</item>
        <item name="android:windowExitAnimation">@anim/slide_to_left</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomTabText">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/gray_text_color</item>
    </style>


    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="layout_collapseMode">pin</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textColor">@color/gray_text_color</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="RedBtnStyle">
        <item name="android:background">@drawable/button_red_rounded</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/raleway_semi_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="RedBorderBtnStyle">
        <item name="android:background">@drawable/border_red</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/raleway_semi_bold</item>
        <item name="android:textColor">@color/splash_gc_end</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="PopupWindowFadingAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in_anim</item>
        <item name="android:windowExitAnimation">@anim/fade_out_anim</item>
    </style>

</resources>
